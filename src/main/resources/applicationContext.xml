		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.2.xsd">

	<import resource="classpath:hibernateContext.xml" />

	<mvc:annotation-driven />
	<tx:annotation-driven transaction-manager="transactionManager" />

	<context:component-scan base-package="ar.api.faltauno.controladores" />
	<context:component-scan base-package="ar.api.faltauno.dao" />
	<context:component-scan base-package="ar.api.faltauno.servicios" />
	

